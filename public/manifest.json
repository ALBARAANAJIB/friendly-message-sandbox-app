{
  "manifest_version": 3,
  "name": "YouTube Maestro",
  "version": "1.0.0",
  "description": "YouTube Maestro - You're YouTube mastered! Ultimate YouTube experience with smart video management and AI-powered summarization",
  "icons": {
    "16": "icons/BRAND3-removebg-preview.png",
    "48": "icons/BRAND3-removebg-preview.png",
    "128": "icons/BRAND3-removebg-preview.png"
  },
  "key": "",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/BRAND3-removebg-preview.png",
      "48": "icons/BRAND3-removebg-preview.png",
      "128": "icons/BRAND3-removebg-preview.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
     
      
      "matches": ["*://*.youtube.com/*", "*://youtu.be/*", "https://www.youtube.com/*", "https://youtube.com/*", "https://youtu.be/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "identity",
    "tabs",
    "downloads",
    "scripting",    
    "webNavigation"  
  ],
  "oauth2": {
    "client_id": "304162096302-st2sml4kkd7cus7646fqun8ada31lgus.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/youtube.readonly",
      "https://www.googleapis.com/auth/youtube.force-ssl",
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.googleapis.com/*",
    "*://*.googleusercontent.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html", "icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}